{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "BlogPost",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "CustomUrl": {
      "type": "string"
    },
    "ShortDescr": {
      "type": "string"
    },
    "Thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "Element": {
      "type": "component",
      "repeatable": true,
      "component": "article.blog-part"
    },
    "VideoURL": {
      "type": "string"
    },
    "HeaderArticle": {
      "type": "dynamiczone",
      "components": [
        "article.image",
        "article.zone-text",
        "article.carousel"
      ]
    }
  }
}
